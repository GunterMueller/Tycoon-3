meta TBCErrorClass
{
reason :String

agent :Agent

role :Role(AgentRule)

printOn(out :Output) :Void
  (* *)
{
    out.writeAll("TBC error: "+reason)
    out.space
    agent.name.printOn(out)
    out.space  
    role.name.printOn(out)
  }

}
